<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Firebase Auth Tutorial"
        android:textStyle="bold"
        android:textColor="#f90101"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:padding="10dp"/>


    <Button
        android:id="@+id/change_password_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="25dp"
        android:background="@color/colorPrimary"
        android:text="Change Password"
        android:textColor="#ffffff" />


    <Button
        android:id="@+id/change_email_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_password_button"
        android:layout_marginTop="25dp"
        android:background="@color/colorPrimary"
        android:text="Change Email"
        android:textColor="#ffffff" />


    <Button
        android:id="@+id/delete_user_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_email_button"
        android:layout_marginTop="25dp"
        android:background="@color/colorPrimary"
        android:text="Delete User"
        android:textColor="#ffffff" />


    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delete_user_button"
        android:layout_marginTop="25dp"
        android:background="@color/colorPrimary"
        android:text="Sign Out"
        android:textColor="#ffffff" />



</RelativeLayout>